@model CategoryViewModel

<div>

    <a asp-action="Index" asp-controller="Content" asp-route-categoryId="@Model.Id">
        @Model!.Name
    </a>

    <form method="post" asp-action="Update" asp-controller="Category">
        <input asp-for="Name" />

        @{
            int? categoryErrorId = (int?)TempData["CategoryErrorId"];
        }
        @if (categoryErrorId == Model.Id)
        {
            <span asp-validation-for="Name"></span>
        }

        <input asp-for="Id" hidden />
        <input asp-for="BaseCategoryId" hidden />
        <input asp-for="FromHome" hidden />
        <input type="submit" value="Update" />
    </form>

    <form method="post" asp-action="Delete" asp-controller="Category">
        <input asp-for="Id" hidden />
        <input asp-for="BaseCategoryId" hidden />
        <input asp-for="FromHome" hidden />
        <input type="submit" value="Delete" />
    </form>

</div>